# Production Environment Configuration
# Critical: All sensitive values must be set via environment variables or secrets management

# Database (use environment variables in production)
DATABASE_URL=${DATABASE_URL}

# AI Providers (use environment variables)
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}
DEFAULT_AI_PROVIDER=${DEFAULT_AI_PROVIDER:-anthropic}
ANTHROPIC_MODEL=${ANTHROPIC_MODEL:-claude-sonnet-4-20250514}
OPENAI_MODEL=${OPENAI_MODEL:-gpt-4o}

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# CORS Settings (restrict to production domains)
CORS_ORIGINS=["https://flashcards.yourdomain.com", "https://www.flashcards.yourdomain.com"]

# Session Settings (CRITICAL: Use secure random secret)
SESSION_SECRET=${SESSION_SECRET}

# Feature Flags
ENABLE_REGISTRATION=${ENABLE_REGISTRATION:-false}
ENABLE_DEMO_MODE=${ENABLE_DEMO_MODE:-false}
ENABLE_API_DOCS=${ENABLE_API_DOCS:-false}

# Performance Settings
MAX_WORKERS=${MAX_WORKERS:-4}
MAX_CONNECTIONS=${MAX_CONNECTIONS:-100}
WORKER_TIMEOUT=${WORKER_TIMEOUT:-30}

# Security Settings
HTTPS_ONLY=true
SECURE_COOKIES=true
HSTS_MAX_AGE=31536000

# Monitoring and Observability
ENABLE_METRICS=true
SENTRY_DSN=${SENTRY_DSN}
LOGGING_LEVEL=WARNING

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=${RATE_LIMIT_PER_MINUTE:-60}

# Backup Settings
ENABLE_AUTO_BACKUP=${ENABLE_AUTO_BACKUP:-true}
BACKUP_RETENTION_DAYS=${BACKUP_RETENTION_DAYS:-30}