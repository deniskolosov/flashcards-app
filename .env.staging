# Staging Environment Configuration
# Used for pre-production testing

# Database
DATABASE_URL=postgresql://flashcards_staging:staging_password@staging-db-host:5432/flashcards_staging

# AI Providers (use staging/test keys if available)
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}
DEFAULT_AI_PROVIDER=anthropic
ANTHROPIC_MODEL=claude-sonnet-4-20250514
OPENAI_MODEL=gpt-4o

# Application Settings
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# CORS Settings (restrict to staging domains)
CORS_ORIGINS=["https://staging.flashcards.yourdomain.com"]

# Session Settings
SESSION_SECRET=${SESSION_SECRET}

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_DEMO_MODE=true
ENABLE_API_DOCS=true

# Performance Settings
MAX_WORKERS=2
MAX_CONNECTIONS=20

# Monitoring
ENABLE_METRICS=true
SENTRY_DSN=${SENTRY_DSN}