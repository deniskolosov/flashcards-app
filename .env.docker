# Docker Environment Configuration
# Used when running the app in Docker containers

# Database (points to postgres service in docker-compose)
DATABASE_URL=postgresql://flashcards:flashcards_dev_password@postgres:5432/flashcards_dev

# AI Providers (will be overridden by docker-compose environment)
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY:-test-key}
OPENAI_API_KEY=${OPENAI_API_KEY:-test-key}
DEFAULT_AI_PROVIDER=anthropic
ANTHROPIC_MODEL=claude-sonnet-4-20250514
OPENAI_MODEL=gpt-4o

# Application Settings
ENVIRONMENT=docker
DEBUG=true
LOG_LEVEL=INFO

# Container-specific settings
HOST=0.0.0.0
PORT=8000

# Health Check Settings
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Docker Networking
CORS_ORIGINS=["http://localhost:8000", "http://127.0.0.1:8000"]

# Development Features
ENABLE_REGISTRATION=true
ENABLE_DEMO_MODE=true
ENABLE_API_DOCS=true
ENABLE_HOT_RELOAD=true

# Container Optimization
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1