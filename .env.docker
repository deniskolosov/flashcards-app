# Docker Environment Configuration
# Used when running the app in Docker containers

# Database (points to postgres service in docker-compose)
DATABASE_URL=postgresql://flashcards:flashcards_dev_password@postgres:5432/flashcards_dev

# AI Providers (will be overridden by docker-compose environment)
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY:-test-key}
OPENAI_API_KEY=${OPENAI_API_KEY:-test-key}
DEFAULT_AI_PROVIDER=anthropic
ANTHROPIC_MODEL=claude-sonnet-4-20250514
OPENAI_MODEL=gpt-4o
